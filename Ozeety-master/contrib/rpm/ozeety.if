
## <summary>policy for ozeety</summary>


########################################
## <summary>
##	Transition to ozeety.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`ozeety_domtrans',`
	gen_require(`
		type ozeety_t, ozeety_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, ozeety_exec_t, ozeety_t)
')


########################################
## <summary>
##	Execute ozeety server in the ozeety domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ozeety_initrc_domtrans',`
	gen_require(`
		type ozeety_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, ozeety_initrc_exec_t)
')


########################################
## <summary>
##	Search ozeety lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ozeety_search_lib',`
	gen_require(`
		type ozeety_var_lib_t;
	')

	allow $1 ozeety_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read ozeety lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ozeety_read_lib_files',`
	gen_require(`
		type ozeety_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, ozeety_var_lib_t, ozeety_var_lib_t)
')

########################################
## <summary>
##	Manage ozeety lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ozeety_manage_lib_files',`
	gen_require(`
		type ozeety_var_lib_t;
	')

	files_search_var_lib($1)
	manage_files_pattern($1, ozeety_var_lib_t, ozeety_var_lib_t)
')

########################################
## <summary>
##	Manage ozeety lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`ozeety_manage_lib_dirs',`
	gen_require(`
		type ozeety_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, ozeety_var_lib_t, ozeety_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a ozeety environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`ozeety_admin',`
	gen_require(`
		type ozeety_t;
		type ozeety_initrc_exec_t;
		type ozeety_var_lib_t;
	')

	allow $1 ozeety_t:process { ptrace signal_perms };
	ps_process_pattern($1, ozeety_t)

	ozeety_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 ozeety_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, ozeety_var_lib_t)

')

